{
  "name": "layered-memory-mcp",
  "version": "0.1.0",
  "description": "Hierarchical memory management MCP server with Session → Project → Global → Temporal layers",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npm run clean && tsc",
    "build:watch": "tsc --watch",
    "dev": "tsx --watch src/index.ts",
    "start": "node dist/index.js",
    "start:dev": "npm run build && npm start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "clean": "rimraf dist coverage",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm run test",
    "prepare": "husky install",
    "docker:build": "docker build -t layered-memory-mcp .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f layered-memory-mcp"
  },
  "keywords": [
    "mcp",
    "memory",
    "hierarchical",
    "ai",
    "claude",
    "layered-memory"
  ],
  "author": "layered-memory team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "chromadb": "^1.8.1",
    "neo4j-driver": "^5.15.0",
    "openai": "^4.0.0",
    "redis": "^4.6.0",
    "sqlite3": "^5.1.6",
    "zod": "^3.22.0",
    "prom-client": "^15.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/[username]/layered-memory-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/[username]/layered-memory-mcp/issues"
  },
  "homepage": "https://github.com/[username]/layered-memory-mcp#readme"
}